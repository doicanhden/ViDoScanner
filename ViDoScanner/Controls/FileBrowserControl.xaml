<UserControl
  x:Class="ViDoScanner.Controls.FileBrowserControl"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
  x:Name="MainUserControl"
  mc:Ignorable="d">
  <Grid>
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="*"/>
      <ColumnDefinition Width="35"/>
    </Grid.ColumnDefinitions>
    <TextBox Margin="0,0,4,0" Text="{Binding ElementName=MainUserControl, Path=FileName, Mode=TwoWay}"/>
    <Button Margin="4,0,0,0" Content="..." Grid.Column="1" Click="Button_Click" />
  </Grid>
</UserControl>
