<Window
  x:Class="ViDoScanner.Windows.ViewResults"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:Controls="clr-namespace:ViDoScanner.Controls"
  x:Name="MainViewResults"
  Title="ViewResults" Height="460">
  <Grid>
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="Auto"/>
      <ColumnDefinition Width="*"/>
    </Grid.ColumnDefinitions>
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto"/>
      <RowDefinition/>
    </Grid.RowDefinitions>
    <TextBlock Grid.Row="0" Grid.Column="0" Margin="4" Text="Đường dẫn tệp kết quả" VerticalAlignment="Center"/>
    <Controls:FileBrowserControl Grid.Row="0" Grid.Column="1" Margin="4" x:Name="ResultsFileName" FileName="{Binding FileName, ElementName=MainViewResults, Mode=TwoWay}"/>
    <DataGrid Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Margin="4" x:Name="ResultsDataGrid" IsReadOnly="True" MouseDoubleClick="ResultsDataGrid_MouseDoubleClick" />
  </Grid>
</Window>
